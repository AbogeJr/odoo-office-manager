        <field name="name">Kanban View</field>
        <field name="res_model">office.model</field>
        <field name="view_mode">kanban,form</field>
    </record>
    
    <!-- Office Space Action for List View -->
    <record id="office_action_main_tree" model="ir.actions.act_window">
        <field name="name">Office Spaces</field>
