<?xml version="1.0"?>
<odoo>
    <!-- Ofice Space Action for Kanban View -->
    <record id="office_action_kanban" model="ir.actions.act_window">
        <field name="name">Kanban View</field>
        <field name="res_model">office.model</field>
        <field name="view_mode">kanban,form</field>
    </record>
    
    <!-- Office Space Action for List View -->
    <record id="office_action_main_tree" model="ir.actions.act_window">
        <field name="name">Office Spaces</field>
        <field name="res_model">office.model</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No offices found. Let's create one!
            </p>
            <p>To get things done, use activities and status on officess.
            </p>
        </field>
    </record>

    <!-- Office Space Tree/List View -->
    <record id="office_view_tree" model="ir.ui.view">
        <field name="name">office.model.tree</field>
        <field name="model">office.model</field>
        <field name="arch" type="xml">
            <tree string="Office Space">
                <field name="name" string="Space" />
                <field name="capacity"/>
                <field name="floor"/>
                <field name="desks"/>
                <field name="computers"/>
                <field name="chairs"/>
                <field name="telephones"/>
                <field name="booked"/>
                <field name="daily_rate" />
            </tree>
        </field>
    </record>

    <!-- Office Form View -->
    <record id="office_view_form" model="ir.ui.view">
        <field name="name">office.model.form</field>
        <field name="model">office.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb16"><field name="name" placeholder="e.g. Office Space 1"/></h1>
                        <h3><field name="description" placeholder="e.g. Elegant Office Space"/></h3>
                    </div>
                        <notebook>
                            <page string="Office Space Details">
                                <group>
                                    <group>
                                        <field name="name"/>
                                        <field name="capacity"/>
                                        <field name="floor"/>
                                    </group>
                                    <group colspan="2">
                                        <field name="desks"/>
                                        <field name="computers"/>
                                        <field name="chairs"/>
                                        <field name="telephones"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="booked"/>
                                    <field name="daily_rate"/>
                                </group>
                            </page>
                            <page string="Reservation Details">
                                <group>
                                    <field name="reservation_ids" string="" mode="tree">
                                        <tree>
                                            <field name="name"/>
                                            <field name="start_date"/>
                                            <field name="end_date"/>
                                            <field name="approved"/>
                                            <field name="customer_id"/>
                                            <field name="days"/>
                                            <field name="cost"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>
<!-- Office Kanban View -->
    <record id="office_kanban_view" model="ir.ui.view">
        <field name="name">office.model.kanban</field>
        <field name="model">office.model</field>
        <field name="arch" type="xml">
            <kanban string="Office Space">
            <field name="name" string="Space" />
            <field name="capacity"/>
            <field name="floor"/>
            <field name="desks"/>
            <field name="computers"/>
            <field name="chairs"/>
            <field name="telephones"/>
            <field name="booked"/>
            <field name="daily_rate" />
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_card">
                        <div class="oe_kanban_card_inner">
                            <div class="oe_kanban_card_header">
                                <div class="oe_kanban_card_title">
                                    <h1><field name="name"/></h1>
                                </div>
                            </div>
                            <div class="oe_kanban_card_body">
                                <div><strong>Capacity: </strong><field name="capacity"/></div>
                                <div><strong>Floor: </strong><field name="floor"/></div>
                                <div><strong>Desks: </strong><field name="desks"/></div>
                                <div><strong>Computers: </strong><field name="computers"/></div>
                                <div><strong>Chairs: </strong><field name="chairs"/></div>
                                <div><strong>Telephones: </strong><field name="telephones"/></div>
                                <div><strong>Booked: </strong><field name="booked"/></div>
                                <div><strong>Daily Rate: </strong><field name="daily_rate"/></div>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
        </field>
    </record>

   <!-- Office Space Search View -->
    <record id="office_search" model="ir.ui.view">
        <field name="name">office.model.search</field>
        <field name="model">office.model</field>
        <field name="arch" type="xml">
            <search string="Office Space Search">
                <field name="name" string="Name" />
                <field name="floor"/>
                <field name="capacity"/>
                <field name="booked"/>

                <filter string="Booked" name="booked" domain="[('booked', '=', True)]"/>
                <filter string="Projector" name="projector" domain="[('projector', '=', True)]"/>
                <group expand="1" string="Group By">
                    <filter string="Booked" name="booked" context="{'group_by':'booked', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Reservation Tree View -->
    <record id="reservation_view_tree" model="ir.ui.view">
        <field name="name">reservation.model.tree</field>
        <field name="model">reservation.model</field>
        <field name="arch" type="xml">
            <tree string="Reservations">
                <field name="name"/>
                <field name="start_date" string="Start"/>
                <field name="end_date" string="End"/>
                <field name="approved"/>
                <field name="office_id"/>
                <field name="customer_id"/>
                <field name="days"/>
                <field name="cost"/>
            </tree>
        </field>
    </record>

    <!-- Reservation Form View -->
    <record id="reservation_view_form" model="ir.ui.view">
        <field name="name">reservation.model.form</field>
        <field name="model">reservation.model</field>
        <field name="arch" type="xml">
            <form string="Reservation Form">
                <sheet>

                    <div class="oe_title">
                        <h1 class="mb16"><field name="name" placeholder="e.g. Reservation 1"/></h1>
                    </div>
                        <notebook>
                            <page string="Reservation Details">
                                <group>
                                    <group>
                                        <field name="name"/>
                                        <field name="customer_id"/>
                                        <field name="office_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="approved"/>
                                        <field name="cost"/>
                                        <field name="days"/>
                                    </group>
                                </group>
                            </page>
                            
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Reservation Calendar View -->
    <record id="reservation_view_calendar" model="ir.ui.view">
        <field name="name">reservation.model.calendar</field>
        <field name="model">reservation.model</field>
        <field name="arch" type="xml">
            <calendar string="Reservations Calendar" mode="month" color="name" date_start="start_date" date_stop="end_date">
                <field name="name"/>
                <field name="approved"/>
                <field name="office_id"/>
                <field name="customer_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="cost"/>
                <field name="days"/>
            </calendar>
        </field>
    </record>

    <!-- Reservation Search View -->
    <record id="reservation_search" model="ir.ui.view">
        <field name="name">reservation.model.search</field>
        <field name="model">reservation.model</field>
        <field name="arch" type="xml">
            <search string="Reservation Search">
                <field name="name" string="Name" />
                <field name="approved"/>
                <filter string="Approved" name="approved" domain="[('approved', '=', True)]"/>
                <group expand="1" string="Group By">
                    <filter string="Office Space" name="office_id" context="{'group_by':'office_id', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Reservation Action for List View -->
    <record id="reservation_action_list" model="ir.actions.act_window">
    <field name="name">Reservations</field>
    <field name="res_model">reservation.model</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="reservation_search"/>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">Click on Create to add a new reservation.</p>
    </field>
    </record>
    
    <!-- Reservation Action for Calendar View -->
    <record id="reservation_action_calendar" model="ir.actions.act_window">
    <field name="name">Reservations - Calendar View</field>
    <field name="res_model">reservation.model</field>
    <field name="view_mode">calendar,form</field>
    <field name="search_view_id" ref="reservation_search"/>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">Click on Create to add a new reservation.</p>
    </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="office_menu_root" name="Office Menu" action="office_action_main_tree">
        <menuitem id="office_menu_kanban" sequence="3" name="Office Spcaes - Kanban" action="office_action_kanban"/>
        <menuitem id="reservation_menu_list" name="Reservations - List" action="reservation_action_list"/>
        <menuitem id="reservation_menu_calendar" name="Reservations - Calendar" action="reservation_action_calendar"/>
    </menuitem>

</odoo>
